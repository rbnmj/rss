<!DOCTYPE html>
<html>
<head>
    <title>{{siteTitle}}</title>
    <style>
        /* Basic Minimalist Styling */
        body {
            font-family: system-ui, -apple-system, sans-serif;
            line-height: 1.6;
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
            color: #333;
        }
        
        #filter-container {
            margin: 20px 0;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
        }
        
        .filter-checkbox {
            margin-right: 15px;
        }
        
        .entry {
            padding: 15px;
            border-bottom: 1px solid #eee;
        }
    </style>
</head>
<body>
    <h1>{{siteTitle}}</h1>
    
    <div id="filter-container">
        <strong>Filter by tag:</strong>
        <label class="filter-checkbox">
            <input type="checkbox" value="none" checked> None
        </label>
    </div>

    {{#each sources}}
    <div class="entry" data-tags="{{this.tags}}">
        <a href="{{this.href}}" target="_blank">{{this.title}}</a>
    </div>
    {{/each}}

    <script>
        // Filter Functionality
        document.addEventListener('DOMContentLoaded', () => {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]');
            
            function filterEntries() {
                const selectedTags = Array.from(document.querySelectorAll('input:checked'))
                                       .map(checkbox => checkbox.value);
                
                document.querySelectorAll('.entry').forEach(entry => {
                    const entryTags = entry.dataset.tags.split(',');
                    const show = selectedTags.some(tag => entryTags.includes(tag));
                    entry.style.display = show ? 'block' : 'none';
                });
            }

            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', filterEntries);
            });
        });
    </script>
</body>
</html>
